//
// New Variables
//

$border-width-none: 0;

//
// Fonts
//

body {
  line-height: 2;
}

//
// Fonts
//

// $font-family-sans-serif: Arial, -apple-system, BlinkMacSystemFont, "Segoe UI",
//   Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji",
//   "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji" !default;


//
// Buttons
//


//
// Dropdown
//

.dropdown-menu {
  overflow: hidden;
  padding-top: 1rem;
  padding-bottom: 1rem;
  border-radius: $border-radius;
  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175);
}

//
// Button (Input Groups)
//

.btn {
  font-weight: bold;
}

.btn:hover {
  background-color: mix-blend-luminosity($primary, $gray-700)
}

.btn-sm {
  border-radius: $border-radius;
}


//
// List Groups
//

.list-group-item:first-child {
  border-top-left-radius: $border-radius-sm;
  border-top-right-radius: $border-radius-sm;
}

.list-group-item:last-child {
  border-bottom-left-radius: $border-radius-sm;
  border-bottom-right-radius: $border-radius-sm;
}

//
// Forms
//

label,
.col-form-label {
  font-weight: bold;
}

select.form-control[multiple], textarea.form-control {
  line-height: 2;
  border-radius: $border-radius-sm;
}

//
// Cards
//

.card {
  border-radius: $border-radius-sm;
}

.card-header {
  font-weight: bold;
  border-bottom: $border-width-none;
}

.card-footer {
  border-top: $border-width-none;
}

.card-header:first-child {
  border-top-left-radius: $border-radius-sm;
  border-top-right-radius: $border-radius-sm;
}

.card-footer:last-child {
  border-bottom-left-radius: $border-radius-sm;
  border-bottom-right-radius: $border-radius-sm;
}

//
// Modals
//

.modal-content {
  border-radius: $border-radius-sm;
}

.modal-header {
  border-bottom: $border-width-none;
}

.modal-footer {
  border-top: $border-width-none;
}
